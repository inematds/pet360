# ===========================================
# PET360 - Environment Variables
# ===========================================

# Database
POSTGRES_USER=pet360
POSTGRES_PASSWORD=pet360_secure_password_change_me
POSTGRES_DB=pet360
DATABASE_URL=postgresql://pet360:pet360_secure_password_change_me@localhost:5432/pet360

# Redis
REDIS_URL=redis://localhost:6379

# API
NODE_ENV=development
API_PORT=3001
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
JWT_REFRESH_SECRET=your_refresh_secret_minimum_32_characters
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Evolution API (WhatsApp)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your_evolution_api_key_here
EVOLUTION_INSTANCE_NAME=pet360_main

# Frontend
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Optional - Monitoring
SENTRY_DSN=

# Optional - Storage (for file uploads)
STORAGE_TYPE=local
